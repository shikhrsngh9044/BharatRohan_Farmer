<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one"
    tools:context=".Activities.ChangePassword">

    <EditText
        android:id="@+id/editOtp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/otp"
        android:inputType="textPersonName|number"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:textColor="#666666"
        android:textColorHint="#666666"
        app:layout_constraintEnd_toStartOf="@+id/tvResend"
        app:layout_constraintStart_toStartOf="@+id/editContact"
        app:layout_constraintTop_toBottomOf="@+id/head_image" />

    <EditText
        android:id="@+id/editContact"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:textColor="#666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editOtp" />

    <EditText
        android:id="@+id/editPass"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/enter_password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:textColor="#666666"
        android:textColorHint="#666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editContact" />

    <EditText
        android:id="@+id/editConfPass"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:hint="@string/enter_conf_pass"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:textColor="#666666"
        android:textColorHint="#666666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPass" />

    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_button_dark"
        android:padding="10dp"
        android:text="@string/change_pass"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editConfPass" />

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:elevation="5dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnOtp"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:background="@drawable/rounded_button_dark"
        android:text="@string/opt_btn"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="@+id/editOtp"
        app:layout_constraintEnd_toEndOf="@+id/editContact"
        app:layout_constraintTop_toTopOf="@+id/editOtp" />

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="@string/resend_otp"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/editOtp"
        app:layout_constraintEnd_toEndOf="@+id/editContact"
        app:layout_constraintTop_toTopOf="@+id/editOtp" />
</android.support.constraint.ConstraintLayout>